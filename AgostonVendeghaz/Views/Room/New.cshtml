@model AgostonVendeghaz.Models.Room

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>New</h2>

            @using (Html.BeginForm("Save", "Room"))
            {
                <div class="form-group">
                    @Html.LabelFor(r => r.Type)
                    @Html.TextBoxFor(r => r.Type, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.GuestFittingInTheRoom)
                    @Html.TextBoxFor(r => r.GuestFittingInTheRoom, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Available)
                    @Html.TextBoxFor(r => r.Available, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Description)
                    @Html.TextAreaFor(r => r.Description, new { @class = "form-control" })
                </div>
                @Html.HiddenFor(r => r.Id)
                @Html.AntiForgeryToken();
                <button type="submit" class="btn btn-primary">Save</button>
            }
        </div>
    </div>
</div>



